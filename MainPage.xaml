<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjetoMAUI.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MainPage">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="CenterAndExpand">

            <Image
                HeightRequest="115"
                Source="logo_green.png"
                WidthRequest="74" />

            <Label
                x:Name="NameApp"
                Margin="0,20,0,120"
                HorizontalOptions="Center"
                IsVisible="true"
                Text="Número da Sorte"
                TextColor="#00AB37"
                VerticalOptions="Center" />

            <VerticalStackLayout x:Name="ContainerLuckNumbers" IsVisible="false">
                <Label
                    Margin="0,20,0,0"
                    HorizontalTextAlignment="Center"
                    Text="O número da sorte é:" />

                <HorizontalStackLayout
                    Margin="0,80"
                    HorizontalOptions="Center"
                    Spacing="10">
                    <Border
                        Padding="10,5"
                        HeightRequest="40"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 7"
                        WidthRequest="50">
                        <Label
                            x:Name="LuckNumber01"
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="10,5"
                        HeightRequest="40"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 7"
                        WidthRequest="50">
                        <Label
                            x:Name="LuckNumber02"
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="10,5"
                        HeightRequest="40"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 7"
                        WidthRequest="50">
                        <Label
                            x:Name="LuckNumber03"
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="10,5"
                        HeightRequest="40"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 7"
                        WidthRequest="50">
                        <Label
                            x:Name="LuckNumber04"
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="10,5"
                        HeightRequest="40"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 7"
                        WidthRequest="50">
                        <Label
                            x:Name="LuckNumber05"
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="10,5"
                        HeightRequest="40"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 7"
                        WidthRequest="50">
                        <Label
                            x:Name="LuckNumber06"
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                </HorizontalStackLayout>

                <Label
                    Margin="0,0,0,50"
                    HorizontalTextAlignment="Center"
                    Text="Boa Sorte!" />
            </VerticalStackLayout>

            <Button
                Clicked="OnGenerateLuckNumber"
                HorizontalOptions="Center"
                Text="Gerar número da sorte" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>